<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolbarItemBindingIssue.MainPage"
             xmlns:local="clr-namespace:ToolbarItemBindingIssue"
             xmlns:plugin="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
             x:Name="ThisMainPage"
             Title="Main Page">

    <ContentPage.BindingContext>
        <local:MainPageVM />
    </ContentPage.BindingContext>

    <plugin:Calendar VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Events="{Binding MyEvents, Source={x:Reference ThisMainPage}}">
        <plugin:Calendar.EventTemplate>
            <DataTemplate>
                <StackLayout
                            Padding="15,0,0,0">
                    <Label
                                Text="{Binding Name}"
                                FontAttributes="Bold"
                                FontSize="Medium" />
                    <Label
                                Text="{Binding Description}"
                                FontSize="Small"
                                LineBreakMode="WordWrap" />
                </StackLayout>
            </DataTemplate>
        </plugin:Calendar.EventTemplate>
    </plugin:Calendar>
</ContentPage>

