<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#333333"
             x:Class="ToolbarItemBindingIssue.MainPage"
             xmlns:local="clr-namespace:ToolbarItemBindingIssue"
             x:Name="ThisMainPage"
             Title="Main Page">

    <ContentPage.BindingContext>
        <local:MainPageVM />
    </ContentPage.BindingContext>

    <CollectionView
        ItemsSource="{Binding MyGroupedItems}" IsGrouped="True" SelectionMode="None">
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate>
                <Label TextColor="White" HorizontalTextAlignment="Center" Text="{Binding Title}" />
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame>
                    <Label Text="{Binding Name}" />

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectCommand, Source={RelativeSource AncestorType={x:Type local:MainPageVM}}}" CommandParameter="{Binding .}" />
                    </Frame.GestureRecognizers>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>

