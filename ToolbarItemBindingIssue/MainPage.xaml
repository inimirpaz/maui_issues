<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolbarItemBindingIssue.MainPage"
             xmlns:local="clr-namespace:ToolbarItemBindingIssue"
             x:Name="ThisMainPage"
             Title="Main Page">

    <ContentPage.BindingContext>
        <local:MainPageVM />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label TextColor="Black">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="IsVisible: " />
                        <Span Text="{Binding IsVisible}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Grid>
                <BoxView WidthRequest="100" HeightRequest="100" BackgroundColor="Red" />
                <BoxView WidthRequest="100" HeightRequest="100" BackgroundColor="Blue" IsVisible="{Binding IsVisible}" />

                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GridCommand}" />
                </Grid.GestureRecognizers>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

