<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#333333"
             x:Class="ToolbarItemBindingIssue.MainPage"
             xmlns:local="clr-namespace:ToolbarItemBindingIssue"
             x:Name="ThisMainPage"
             Title="Main Page">

    <ContentPage.BindingContext>
        <local:MainPageVM />
    </ContentPage.BindingContext>

    <ScrollView Orientation="Horizontal" HeightRequest="120">
        <ScrollView.Background>
            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="White" Offset="0.75" />
                    <GradientStop Color="Green" Offset="1" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </ScrollView.Background>

        <StackLayout Orientation="Horizontal" BindableLayout.ItemsSource="{Binding Strings}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <BoxView WidthRequest="100" HeightRequest="100" BackgroundColor="Black" Margin="10" />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
    </ScrollView>
</ContentPage>

