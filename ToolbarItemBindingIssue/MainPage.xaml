<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolbarItemBindingIssue.MainPage"
             xmlns:local="clr-namespace:ToolbarItemBindingIssue"
             x:Name="ThisMainPage"
             Title="Main Page">

    <ContentPage.BindingContext>
        <local:MainPageVM />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <!--<local:ToolbarItemExtended IsVisible="{Binding IsVisible, Source={x:Reference ThisMainPage}}" Command="{Binding MyCommand}">
            <local:ToolbarItemExtended.IconImageSource>
                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe838;" Color="Blue" />
            </local:ToolbarItemExtended.IconImageSource>
        </local:ToolbarItemExtended>-->

        <local:ToolbarItemExtended IsVisible="{Binding IsVisible}" Command="{Binding MyCommand}">
            <local:ToolbarItemExtended.IconImageSource>
                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe838;" Color="Red" />
            </local:ToolbarItemExtended.IconImageSource>
        </local:ToolbarItemExtended>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                Text="Toggle MenuItem" 
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

