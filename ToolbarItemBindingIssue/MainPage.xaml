<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ToolbarItemBindingIssue"
             x:Class="ToolbarItemBindingIssue.MainPage"
             x:Name="ThisMainPage"
             BackgroundColor="#333333"
             Title="Main Page">

    <ContentPage.BindingContext>
        <local:MainPageVM />
    </ContentPage.BindingContext>

    <StackLayout Spacing="6" Margin="0,56,0,0">
        <Label TextColor="White" Text=".NET MAUI" HorizontalTextAlignment="Center" FontSize="Large" />

        <ImageButton HorizontalOptions="Center" WidthRequest="100" HeightRequest="100" BorderColor="White" BackgroundColor="DarkOrange" BorderWidth="1" CornerRadius="50" />
    </StackLayout>
</ContentPage>